                    <li><a href="#" style="color:#98989A"><span class="glyphicon glyphicon-scissors"></span>&nbsp;Relatorio de Materiais</a></li>
                    <li><a href="#" style="color:#98989A"><span class="glyphicon glyphicon-lock"></span>&nbsp;Relatorio de Acessos</a></li>
                </ul>
                <ul class="nav nav-sidebar">
                    <li><a href="~/Login"><span class="glyphicon glyphicon-log-out"></span>&nbsp;Sair</a></li>
                </ul>
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer>
        &copy; @DateTime.Now.Year
    </footer>
